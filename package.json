{
    "name": "tana-tabs-and-links",
    "description": "Renames tana tabs for a multitab experience, clips current webpage and selection to tana-paste format, and handles tana links",
    "version": "0.0.6",
    "homepage": "https://tana.pub/2zNR04BRXwl9/simple-browser-multi-tab-experience-for-tana",
    "author": "Zephyr",
    "repository": {
        "type": "git",
        "url": "https://github.com/zephyrinthewild/tana-tabs-and-links.git"
    },
    "scripts": {
        "start": "xt-build -e dev -w",
        "start:firefox": "xt-build -e dev -p firefox -w",
        "build": "xt-build -e prod",
        "build:firefox": "xt-build -e prod -p firefox",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test",
        "sync": "xt-sync"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintIgnore": [
        "test/**/*"
    ],
    "devDependencies": {
        "extension-cli": "latest"
    },
    "xtdocs": {
        "source": {
            "include": [
                "README.md",
                "src"
            ]
        }
    },
    "xtbuild": {
        "js_bundles": [
            {
                "name": "background",
                "src": "./src/background.js"
            },
            {
                "name": "content",
                "src": "./src/content.js"
            }
        ]
    },
    "dependencies": {
        "turndown": "^7.1.1"
    }
}
